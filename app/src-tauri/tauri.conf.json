{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "app",
  "version": "0.1.0",
  "identifier": "com.screenshot.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {

    "macOSPrivateApi": true,
    "windows": [
      {
        "transparent": true,
        "title": "app",
        "width": 320,
        "height": 240,
        "visible": true,
        "alwaysOnTop": true,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "maximizable": false,
        "minimizable": false,
        "closable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
